{
	"name": "df_transform_hospital_admissions",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "ds_raw_hospital_admissions",
						"type": "DatasetReference"
					},
					"name": "hospitaladmissionssource"
				},
				{
					"name": "sourcedimdate"
				}
			],
			"sinks": [],
			"transformations": [
				{
					"name": "selectreqfields"
				},
				{
					"name": "lookupcountry"
				},
				{
					"name": "selectreqfields2"
				},
				{
					"name": "splitdailyfromweekly"
				}
			],
			"scriptLines": [
				"source(output(",
				"          country as string,",
				"          indicator as string,",
				"          date as date,",
				"          year_week as string,",
				"          value as double,",
				"          source as string,",
				"          url as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> hospitaladmissionssource",
				"source(allowSchemaDrift: true,",
				"     validateSchema: false) ~> sourcedimdate",
				"hospitaladmissionssource select(mapColumn(",
				"          country,",
				"          indicator,",
				"          reported_date = date,",
				"          reported_year_week = year_week,",
				"          value,",
				"          source",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> selectreqfields",
				"selectreqfields, sourcedimdate lookup(selectreqfields@country == @country,",
				"     multiple: false,",
				"     pickup: 'any',",
				"     broadcast: 'auto')~> lookupcountry",
				"lookupcountry select(mapColumn(",
				"          country,",
				"          indicator,",
				"          reported_date,",
				"          reported_year_week,",
				"          value,",
				"          source,",
				"          country = @country,",
				"          country_code_2_digit,",
				"          country_code_3_digit,",
				"          population",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> selectreqfields2",
				"selectreqfields2 split(indicator=='Weekly new hospital admissions per 100k' || indicator=='Weekly new ICU admissions per 100k'\r",
				",",
				"     disjoint: false) ~> splitdailyfromweekly@(weekly, daily)"
			]
		}
	}
}